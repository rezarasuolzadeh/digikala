<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    android:layout_marginTop="3dp"
    android:layout_marginRight="15dp"
    android:layout_marginLeft="15dp"
    android:layout_marginBottom="3dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/rateTitleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:fontFamily="@font/iransans"
        android:gravity="right"
        android:textColor="#000"
        android:textSize="9sp"
        android:textStyle="normal"
        tools:text="میزان نگهداری باتری" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="11dp"
        android:layout_gravity="center"
        android:layout_weight="6"
        android:layoutDirection="rtl"
        android:orientation="horizontal">

        <ProgressBar
            android:id="@+id/rateProgressBarFirst"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="11"
            android:progress="0"
            android:max="20"
            android:progressBackgroundTint="@color/GRAY"
            android:scaleY="2" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/WHITE" />

        <ProgressBar
            android:id="@+id/rateProgressBarSecond"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="11"
            android:progress="0"
            android:max="20"
            android:progressBackgroundTint="@color/GRAY"
            android:scaleY="2" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/WHITE" />

        <ProgressBar
            android:id="@+id/rateProgressBarThird"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="11"
            android:progress="0"
            android:max="20"
            android:progressBackgroundTint="@color/GRAY"
            android:scaleY="2" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/WHITE" />

        <ProgressBar
            android:id="@+id/rateProgressBarForth"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="11"
            android:progress="0"
            android:max="20"
            android:progressBackgroundTint="@color/GRAY"
            android:scaleY="2" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/WHITE" />

        <ProgressBar
            android:id="@+id/rateProgressBarFifth"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="11"
            android:progress="0"
            android:max="20"
            android:progressBackgroundTint="@color/GRAY"
            android:scaleY="2" />

    </LinearLayout>

</LinearLayout>