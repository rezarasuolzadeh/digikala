<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/homeToolBar"
        layout="@layout/layout_toolbar"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundColour">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/productFirstCardInclude"
                layout="@layout/layout_product_first_card" />

            <include
                android:id="@+id/productSecondCardInclude"
                layout="@layout/layout_product_second_card" />

            <include
                android:id="@+id/productThirdCardInclude"
                layout="@layout/layout_product_third_card"/>

            <include
                android:id="@+id/productForthCardInclude"
                layout="@layout/layout_product_fourth_card"/>

            <include
                android:id="@+id/productFifthCardInclude"
                layout="@layout/layout_product_fifth_card"/>

<!--            <include-->
<!--                android:id="@+id/productSixthCardInclude" />-->

<!--            <include-->
<!--                android:id="@+id/productSubCategoryInclude" />-->

<!--            <include-->
<!--                android:id="@+id/productSimilarProductInclude" />-->

        </LinearLayout>

    </ScrollView>

</LinearLayout>